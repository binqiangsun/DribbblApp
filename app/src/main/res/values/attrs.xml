    <attr name="roundRadius" format="integer"/>
    <attr name="isGifEnable" format="boolean"/>
    <attr name="lowImageUrl" format="string"/>
    <attr name="isProgress" format="boolean"/>

    <declare-styleable name="NetworkImageView">
        <attr name="imageUrl"  />
        <attr name="isCircle"  />
