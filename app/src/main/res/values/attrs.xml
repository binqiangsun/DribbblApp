        <attr name="roundRadius" />
        <attr name="isGifEnable" />
        <attr name="lowImageUrl" />
        <attr name="isProgress"/>
    </declare-styleable>

    <declare-styleable name="NetworkDraweeView">
        <attr name="imageUrl"  />
        <attr name="isCircle"  />
        <attr name="backgroudRes" />
        <attr name="roundRadius" />
        <attr name="isGifEnable" />
        <attr name="lowImageUrl" />
        <attr name="isProgress" />
    </declare-styleable>

    <declare-styleable name="CommentBarView">
        <attr name="shotId" format="integer"/>
    </declare-styleable>
</resources>